<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fAddres"
    android:background="@android:color/background_dark"
    tools:context="com.joybien.gardCharge.AddressFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bAction"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/ic_dialog_map"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textViewCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/switch1"
            android:layout_alignParentTop="true"
            android:text="Direct Control"
            android:textColor="@android:color/background_light" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tva"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text=""
            android:textColor="@android:color/background_light" />

        <NumberPicker
            android:id="@+id/numberPicker0"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tva"
            android:layout_marginTop="27dp"
            android:theme="@style/AppTheme.Picker" />

        <GridView
            android:id="@+id/funcGV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/numberPicker0"
            android:layout_marginTop="15dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"></GridView>

        <SeekBar
            android:id="@+id/seekBarA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/numberPicker0"
            android:layout_marginTop="60dp"
            android:max="254"
            android:progressTint="@android:color/background_light" />

        <Button
            android:id="@+id/npButton"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignEnd="@+id/bAction"
            android:layout_below="@+id/bAction"
            android:background="@drawable/filter150_x" />


    </RelativeLayout>
</FrameLayout>
